<Window x:Class="KudoskibidiWPF.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KudoskibidiWPF"
        mc:Ignorable="d"
        Title="AdminDashboard" Height="600" Width="1300"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Sidebar Menu -->
        <StackPanel DockPanel.Dock="Left" Width="180" Background="#2d3e50">
            <Button x:Name="btnCustomer" Content="Khách hàng" Margin="10" Height="40"
                    Click="btnCustomer_Click" Foreground="White" Background="#34495e"/>
            <Button x:Name="btnRoom" Content="Phòng" Margin="10" Height="40"
                    Click="btnRoom_Click" Foreground="White" Background="#34495e"/>
            <Button x:Name="btnBooking" Content="Đặt phòng" Margin="10" Height="40"
                    Click="btnBooking_Click" Foreground="White" Background="#34495e"/>
            <Button x:Name="btnReport" Content="Báo cáo" Margin="10" Height="40"
                    Click="btnReport_Click" Foreground="White" Background="#34495e"/>
        </StackPanel>

        <!-- Main Content Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
